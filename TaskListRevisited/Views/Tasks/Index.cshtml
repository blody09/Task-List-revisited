
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@model List<Tasks>

<h1>List of Tasks</h1>

<table class="table table-dark">
    <tr>
        <th>Task Description</th>
        <th>Due Date</th>
        <th>Completed</th>
    </tr>
    @foreach (Tasks theTasks in Model)
    {
        <tr>
            <td>@theTasks.TaskDescription</td>
            <td>@theTasks.DueDate</td>
            <th>Completed?</th>
            <td>
                @{
                    if (theTasks.Complete)
                    {
                        <p>Yes</p>
                    }
                    else
                    {
                        <p>No</p>
                    }
                }
            </td>
        </tr>
        <tr>
            <td>
                <a href="../Tasks/DeleteTasks?id=@theTasks.Id">Delete Task!</a>
            </td>
            <td>
                <a href="../Tasks/UpdateTasks?id=@theTasks.Id">Edit Tasks!</a>
            </td>
        </tr>

    }
</table>

<a href="../Tasks/AddTasks" class="btn btn-dark">Add a new Task!</a>